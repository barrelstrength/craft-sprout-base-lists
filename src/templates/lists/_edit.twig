{% extends "sprout-base-lists/_layouts/base" %}
{% import "_includes/forms" as forms %}

{% set title = "Edit List"|t('sprout-base-lists') %}

{% if craft.app.request.getSegment(3) == 'new' %}
    {% set title = "New List"|t('sprout-base-lists') %}
{% endif %}

{% set crumbs = [
    { label: "Subscriber Lists"|t('sprout-base-lists'), url: url('sprout-lists/lists') },
] %}

{% set fullPageForm = true %}

{% block actionButton %}
    <div class="buttons">
        <div class="btngroup submit">
            <input type="submit" class="btn submit" value="{{ 'Save List'|t('sprout-base-lists') }}">

            {% if list.id %}
                <div class="btn submit menubtn"></div>
                <div class="menu">
                    <hr>
                    <ul>
                        <li><a class="formsubmit error"
                               data-action="sprout-base-lists/lists/delete-list"
                               data-confirm="{{ 'Are you sure you want to delete this List?'|t('sprout-base-lists') }}"
                               data-redirect="{{ 'sprout-lists/lists'|hash }}">{{ "Delete"|t('sprout-base-lists') }}</a>
                        </li>
                    </ul>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% set saveShortcutRedirect = continueEditingUrl %}

{% block content %}

    <input type="hidden" name="action" value="sprout-base-lists/lists/save-list">
    {{ redirectInput("sprout-lists/lists") }}

    <input type="hidden" name="listId"
           value="{{ list.id is defined ? list.id : null }}">
    <input type="hidden" name="type"
           value="barrelstrength\sproutbaselists\listtypes\SubscriberListType">

    {{ forms.textField({
        label: "List Name"|t('sprout-base-lists'),
        instructions: "The name of your list that will be visible to users."|t('sprout-base-lists'),
        id: 'name',
        name: 'name',
        value: (list is defined ? list.name : null),
        autofocus: true,
        required: true,
        first: true,
        errors: (list is defined ? list.getErrors('name') : null)
    }) }}

    {{ forms.textField({
        label: "List Handle"|t('sprout-base-lists'),
        instructions: "How youâ€™ll refer to this list in your templates."|t('sprout-base-lists'),
        id: 'handle',
        name: 'handle',
        value: (list is defined ? list.handle : null),
        required: true,
        errors: (list is defined ? list.getErrors('handle') : null)
    }) }}

{% endblock %}

{% block details %}

    {% if list.id is not null %}

        <div class="meta">

            <div class="field">
                <div class="heading">
                    <label>{{ "List Type"|t('sprout-base-lists') }}</label>
                </div>
                <div class="input">
                    <h6>{{ "Recipients"|t('sprout-base-lists') }}</h6>
                </div>
            </div>

        </div>
        <hr>
        <div class="meta read-only">

            <div class="data">
                <h5 class="heading">{{ "Date Created"|t('sprout-base-lists') }}</h5>
                <div class="value">{{ list.dateCreated.localeDate() }} {{ list.dateCreated.localeTime() }}</div>
            </div>
            <div class="data">
                <h5 class="heading">{{ "Date Updated"|t('sprout-base-lists') }}</h5>
                <div class="value">{{ list.dateUpdated.localeDate() }} {{ list.dateUpdated.localeTime() }}</div>
            </div>

        </div>
        <hr>

        <div class="meta">
            <p class="light">{{ "Deleting a List will delete all Subscriptions to the List. No Subscriber will be deleted."|t('sprout-base-lists') }}</p>
        </div>
    {% endif %}


{% endblock %}

{% if not list.handle %}
    {% js %}
        new Craft.HandleGenerator('#name', '#handle');
    {% endjs %}
{% endif %}
